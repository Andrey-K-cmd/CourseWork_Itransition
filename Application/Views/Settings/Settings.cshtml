@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}

<form style="max-width: 300px; margin:auto; margin-top: 85px" asp-controller="Settings" asp-action="ApplySettings" asp method="post">
    <h2 class="text-center">@Localizer["Settings"]</h2>
    <hr />
    <label>@Localizer["Theme"]</label>
    <select class="form-select mb-3" name="theme">
        <option value="default" selected="@(ViewData["CurrentTheme"]?.ToString() == "default")">@Localizer["Default"]</option>
        <option value="darkly" selected="@(ViewData["CurrentTheme"]?.ToString() == "darkly")">@Localizer["Darkly"]</option>
    </select>
    <label>@Localizer["Language"]</label>
    <select class="form-select mb-4" name="lang">
        <option value="en-US" selected="@(ViewData["CurrentLang"]?.ToString() == "en-US")">@Localizer["English"]</option>
        <option value="ja-JP" selected="@(ViewData["CurrentLang"]?.ToString() == "ja-JP")">@Localizer["Japanese"]</option>
    </select>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">@Localizer["Apply"]</button>
    </div>
</form>